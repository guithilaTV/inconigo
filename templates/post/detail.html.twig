{% extends 'base.html.twig' %}

{% block title %}Détail du post
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .fixed-bottom-right {
        position: fixed;
        bottom: 20px;
        right: 20px;
    }
</style>
{% endblock %}

{% block body %}
	<h2>
		Post du {{post.datePost | date('d/m/y')}} par {{ post.createur.pseudo }}
	</h2>
	<h3>
		{{ post.contenu }}
	</h3>

	<p>Aimé par</p>
	<ul>
		{% for jaime in post.jaime %}
			<li>{{ jaime.pseudo }}</li>
		{% endfor %}
	</ul>

	<p>Liste des commentaires</p>
	<ul>
		{% for comment in comments %}
			<li>
				{{ comment.contenu | raw}}
				<a class="btn btn-primary" href="{{ path('app_comment_detail', {id: comment.id}) }}">Ouvrir</a>
			</li>
		{% endfor %}
	</ul>
	<a class='button' href="{{path('app_post')}}">Retour à la liste</a>
	<a class="btn btn-primary fixed-bottom-right" href="{{ path('app_comment_new', {postId: post.id}) }}">Nouveau Commentaire</a>
{% endblock %}
